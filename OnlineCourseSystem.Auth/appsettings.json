{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=OnlineCourseDB;Integrated Security=True;MultipleActiveResultSets=False;Encrypt=False;TrustServerCertificate=True"
  },
  "DuplicateProtection": {
    "TimeToLiveSeconds": 5,
    "Messages": {
      "en": "Duplicate request detected. Please wait before retrying.",
      "ar": "تم اكتشاف طلب مكرر. يرجى الانتظار قبل المحاولة مرة أخرى."
    }
  },
  "Auth": {
    "JwtKey": "THIS_IS_A_DEVELOPMENT_KEY_CHANGE_IT",
    "JwtIssuer": "CopticMember.AuthService",
    "JwtAudience": "CopticMember.Clients",
    "JwtExpireMinutes": 60,
    "RefreshTokenExpireDays": 30,
    "PasswordPepper": "SOME_LONG_SECRET_PEPPER_CHANGE_ME"
  },
  "PasswordPolicyOptions": {
    "Enabled": true,
    "MinimumLength": 8,
    "RequireUpper": true,
    "RequireLower": true,
    "RequireDigit": true,
    "RequireSymbol": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
